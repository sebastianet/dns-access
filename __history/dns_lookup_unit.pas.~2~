unit dns_lookup_unit;

//  c:\Sebas\delphi\Ping_Continu>nslookup 91.126.241.136
//  Server:  UnKnown
//  Address:  192.168.1.1
//
//  Name:    cli-5b7ef188.bcn.adamo.es
